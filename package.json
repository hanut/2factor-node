{
  "name": "2factor",
  "version": "1.0.6",
  "description": "Simple node library for sending transactional/otp/promotional SMS in India using the 2factor.in APIs",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "mocha tests",
