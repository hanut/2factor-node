  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hanut/2factor-node/issues"
  },
  "homepage": "https://github.com/hanut/2factor-node#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.1.1",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "request": "^2.88.0"
  }
